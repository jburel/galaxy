<?xml version="1.0"?>
<tool name="IDR Importer 2" id="idr_importer_2" tool_type="data_source" version="0.0.1">
    <description> - receive data from IDR</description>
    <requirements>
      <requirement type="package" version="3.6.5">zeroc-ice36-python</requirement>
      <requirement type="package" version="5.6.0">omero-py</requirement>
    </requirements>
    <command><![CDATA[
        env &&
        python $__tool_directory__/importer2.py $output $__app__.config.output_size_limit
    ]]></command>
    <inputs action="https://genome.ucsc.edu/cgi-bin/hgTables" check_values="false" method="get">
        <display>go to UCSC Table Browser $GALAXY_URL</display>
        <param name="GALAXY_URL" type="baseurl" value="/tool_runner" />
        <param name="tool_id" type="hidden" value="idr_importer_2" />
        <param name="sendToGalaxy" type="hidden" value="1" />
        <param name="hgta_compressType" type="hidden" value="none" />
        <param name="hgta_outputType" type="hidden" value="bed" />
    </inputs>

    <help>
This tool allows you to import data from IDR.
    </help>
    <outputs>
        <data name="output" format="data" from_work_dir="plane.npy"/>
    </outputs>
    <options sanitize="False" refresh="True"/>
</tool>