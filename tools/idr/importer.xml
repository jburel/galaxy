<?xml version="1.0"?>
<tool name="IDR Importer" id="idr_importer" version="0.0.1">
    <description>Retrieve images from IDR images ID. </description>
    <requirements>
      <requirement type="package" version="3.6.5">zeroc-ice36-python</requirement>
      <requirement type="package" version="5.6.0">omero-py</requirement>
      <requirement type="package" version="3.1.3">matplotlib</requirement>
    </requirements>
    <command><![CDATA[
        python $__tool_directory__/importer.py $image_id 
    ]]></command>
    <inputs>
        <param format="data" name="image_id" type="text" label="Enter Image Ids" />
        <param format="data" name="channel" type="text" label="Enter Channel name" />
        <param format="data" name="z_section" type="text" label="Enter selected z" />
        <param format="data" name="timepoint" type="text" label="Enter selected t" />
        <param format="data" name="region" type="text" label="Enter Region to select (comma separated)" />
    </inputs>
    <outputs>
        <collection name="output_file" type="list">
            <discover_datasets format="tiff"/> 
        </collection>    
    </outputs>
    <help>
This tool allows you to import data from IDR.
Enter the images ID
    </help>
    <options sanitize="False" refresh="True"/>
</tool>